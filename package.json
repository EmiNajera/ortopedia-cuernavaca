{
  "name": "ortotech-nextjs",
  "version": "0.0.1",
  "scripts": {
    "dev": "next dev --turbo",
    "build": "next build",
    "start": "next start",
    "test": "node scripts/test.js",
    "lint": "eslint -c .eslintrc.cjs . --ext .js,.jsx,.ts,.tsx",
    "format": "prettier --write .",
    "analyze": "set ANALYZE=true && npm run build",
    "lighthouse": "lighthouse http://localhost:3000 --output html --output-path ./lighthouse-report.html",
    "perf": "node scripts/perf/run-lh.js",
    "perf:prod": "node scripts/perf/run-lh-prod.js",
    "perf:ci": "node scripts/perf/run-lh.js --ci",
    "test:responsive": "node scripts/test-responsive.js",
    "test:mobile": "node scripts/test-responsive.js --devices=mobile,mobileLarge",
    "test:tablet": "node scripts/test-responsive.js --devices=tablet",
    "test:desktop": "node scripts/test-responsive.js --devices=laptop,desktop",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "prepare": "husky install"
  },
  "dependencies": {
    "@mdx-js/loader": "^3.1.1",
    "@mdx-js/react": "^3.1.1",
    "@next/mdx": "^16.0.7",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.18",
    "@types/mdx": "^2.0.13",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.12",
    "gray-matter": "^4.0.3",
    "lenis": "^1.3.15",
    "lucide-react": "^0.542.0",
    "motion": "^12.23.24",
    "mysql2": "^3.15.3",
    "next": "^16.0.7",
    "next-mdx-remote": "^5.0.0",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "react-icons": "^5.5.0",
    "styled-jsx": "^5.1.7",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@eslint/eslintrc": "^3.3.1",
    "@next/bundle-analyzer": "^16.0.7",
    "@next/eslint-plugin-next": "^15.5.6",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^16.3.0",
    "autoprefixer": "^10.4.14",
    "babel-jest": "^30.1.2",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.0",
    "husky": "^8.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lighthouse": "^12.2.0",
    "lint-staged": "^16.2.4",
    "postcss": "^8.4.23",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.3.2",
    "wait-on": "^8.0.1",
    "web-vitals": "^5.1.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write"
    ]
  }
}
